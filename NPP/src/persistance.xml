<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="your_persistence_unit_name" transaction-type="RESOURCE_LOCAL">
        <!-- Ваши классы сущностей -->
        <class>Entities.Apartment</class>
        <class>Entities.Street</class>
        <class>Entities.Building</class>
        <class>Entities.Plumbing</class>
        <class>Entities.Furniture</class>

        <properties>
            <!-- Настройки для вашей базы данных -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/your_database"/>
            <property name="javax.persistence.jdbc.user" value="your_username"/>
            <property name="javax.persistence.jdbc.password" value="your_password"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <!-- Другие свойства -->
        </properties>
    </persistence-unit>
</persistence>
